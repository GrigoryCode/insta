.col-md-6.col-md-offset-3
  .row
    .panel.panel-default
      .panel-body
        = image_tag @pic.image.url, class: 'pic-image'
        %h2= @pic.title
        %p= @pic.description
        %p
        by
        =@pic.user.email

        %br
        
        - if user_signed_in?
          -# = link_to "Back", root_path, class: 'btn btn-link'
          = link_to "Edit", edit_pic_path, class: 'btn btn-link'
          = link_to "Delete", pic_path, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-link'
